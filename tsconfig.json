{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/images/*": [
        "src/assets/images/*"
      ],
      "@/store/*": [
        "src/store/*"
      ],
      "@/libs/*": [
        "src/libs/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": ["node_modules", "dist", "build"]  
}